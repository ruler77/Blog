<%- include('header') -%>
<title>分类</title>
</head>
<body>
<!--导航-->
<nav class="ui inverted attached segment m-padded-tb-mini">
  <div class="ui container">
    <div class="ui inverted secondary stackable menu">
      <h2 class="ui teal header item">Blog</h2>
        <a href="/index" class="m-item item m-mobile-hiden"><i class="home icon"></i>首页</a>
        <a href="/types" class="active m-item item m-mobile-hiden"><i class="idea icon"></i>分类</a>
        <a href="/tags" class="m-item item m-mobile-hiden"><i class="tags icon"></i>标签</a>
        <a href="/archives" class="m-item item m-mobile-hiden"><i class="clone icon"></i>归档</a>
        <a href="/message" class="m-item item m-mobile-hiden"><i class="pencil alternate icon"></i>留言</a>
        <a href="#" class="m-item item m-mobile-hiden"><i class="comment outline icon"></i>友情链接</a>
        <a href="/about" class="m-item item m-mobile-hiden"><i class="info icon"></i>关于我</a>
      <div class="right m-item item m-mobile-hiden">
        <div class="ui input icon">
          <input type="text" placeholder="Search...">
          <i class="search link icon"></i> </div>
      </div>
    </div>
  </div>
  <a href="#" class="ui m-button-mobile icon button black m-right-top m-mobile-show">
    <i class="sidebar icon"></i>
  </a>
</nav>
<!--中间内容-->
<div class="m-padded-tb-big  m-container">
  <!--布局-->
  <div class="ui container">
    <!--head-->
    <div class="ui top attached segment">
      <div class="ui middle aligned two column grid">
        <div class="column">
          <h3 class="ui teal header">分类</h3>
        </div>
        <div class="right aligned column">
          共 <h2 class="ui orange header m-inline-block m-text-thin"> <%= num %>  </h2> 个
        </div>
      </div>
    </div>
    <div class="ui attached segment">
      <% types.forEach(e => { %>
        <div class="ui labeled button  m-margin-tb-small" tabindex="0" id="<%= e.id %> ">
          <div onclick='location="/types/<%= e.id %>"' class="ui basic <%= cur!=e.id?'teal':'red' %>  button"> <%= e.name %>  </div>
          <a class="ui basic left pointing <%= cur!=e.id?'teal':'red' %> label">
            <%= e.count %> 
          </a>
        </div>         
      <% }) %>
    </div>
  </div>
  <div class="ui teal top attached segment  m-mobile-lr-clear">
    <% articleList.forEach(element=> { %>
      <div class="ui padded vertical segment m-mobile-lr-clear">
        <div class="ui mobile reversed stackable grid">
          <div class="eleven wide column">
            <h3 class="ui header" onclick='location="/blog/<%= element.id %>"' style="cursor: pointer;">
              <%= element.title %>
            </h3>
            <p>
              <%= element.content.replace(/<[^>]+>/g,'').substring(0,100) %>...
            </p>
            <div class="ui stackable grid">
              <div class="eleven wide column">
                <div class="ui horizontal link list">
                  <div class="item">
                    <img src="/images/1000-850x400.jpg" alt="headimage" class="ui avatar image">
                    <div class="content">
                      <a href="#" target="_blank" class="header">
                        <%= element.user_id %>
                      </a>
                    </div>
                  </div>
                  <div class="item">
                    <i class="calendar icon"></i><span class="icon">
                      <%= element.time.toLocaleString() %>
                    </span>
                  </div>
                  <div class="item">
                    <i class="eye icon"></i><span class="icon">
                      <%= element.hits %>
                    </span>
                  </div>
                </div>
              </div>
              <div class="five wide right aligned column">
                <a href="#" target="_blank" class="ui teal basic label m-padded-small">认知升级</a>
              </div>
            </div>
          </div>
    
          <div class="five wide column">
            <a href="#" target="_blank">
              <img src="/images/1000-850x400.jpg" alt="img" class="ui rounded image">
            </a>
          </div>
        </div>
    
      </div>
      <% }) %>
  </div>
  <div class="ui bottom attached segment">
    <div class="ui middle aligned two column grid">
      <div class="column">
        <a href="#" class="ui mini teal basic button">上一页</a>
      </div>
      <div class="right aligned column">
        <a href="#" class="ui mini teal basic button">下一页</a>
      </div>
    </div>
  </div>
</div>
<%- include('footer') -%>